{
  "name": "placetopay/php-gnupg",
  "description": "A library to encrypt and decrypt with GnuPG",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Enrique Garcia",
      "email": "enrique.garcia@placetopay.com"
    },
    {
      "name": "Diego Calle",
      "email": "diego.calle@placetopay.com"
    }
  ],
  "archive": {
    "exclude": [
      ".git",
      ".gitignore"
    ]
  },
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "autoload": {
    "psr-4": {
      "PlacetoPay\\GnuPG\\": "src"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/"
    ]
    },
  "scripts": {
    "php-cs-fixer": "vendor/bin/php-cs-fixer fix --config=.php_cs"
  }
}
